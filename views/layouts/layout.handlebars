<html lang="en">
<head>
  <title>Show Trackr</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
  <script src="js/script.js" charset="utf-8"></script>
</head>
<body>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" style="background-color:yellow;" href="#">Show<B>Trackr</B></a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active" style="border:1px dotted;"><a href="/">Home</a></li>
      <li><a href="/add">Add</a></li>
    </ul>
    <ul class="nav navbar-nav navbar-right">
      {{#if user}}
        {{#if user.local.email}}
        <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> {{user.local.email}}</a></li>
        {{/if}}
        {{#if user.facebook.name}}
        <li><a><span class="glyphicon glyphicon-log-in"></span>  {{user.facebook.id}}</a></li>
        {{/if}}
        {{#if user.google.name}}
        <li><a><span class="glyphicon glyphicon-log-in"></span>  {{user.google.name}}</a></li>
        {{/if}}
        <li><a href="/logout"><span class="glyphicon glyphicon-user"></span> Logout</a></li>
        {{else}}
        <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
        <li><a href="/signup"><span class="glyphicon glyphicon-user"></span> Sign Up</a></li>
        {{/if}}


    </ul>
  </div>
</nav>

{{{body}}}
</body>
</html>
